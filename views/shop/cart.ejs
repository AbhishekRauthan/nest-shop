<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if (products.length) { %>
      <ul>
        <% products.forEach(prod => { %>
          <li><%= prod.product.title %> (<%= prod.qty %>)</li>
        <% }) %>
      </ul>
    <% } %>

    <% } else { %>
      <h1>Cart is Empty</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>